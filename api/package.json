{
  "name": "redis-party-api",
  "version": "0.1.0",
  "description": "Spotify + YouTube party api backed by Redis",
  "private": true,
  "engines": {
    "node": "12.x.x"
  },
  "main": "dist/index.js",
  "scripts": {
    "serve": "cross-env NODE_ENV=development node dist/index.js",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "prebuild": "npm run lint",
    "build": "npm run build-ts",
    "build-ts": "rimraf dist && tsc",
    "watch-node": "cross-env NODE_ENV=development nodemon --delay 1 --watch dist dist/index.js",
    "watch-ts": "rimraf dist && cross-env NODE_ENV=development tsc -w",
    "lint": "eslint --ext .js,.ts . --color"
  },
  "dependencies": {
    "@hapi/boom": "^9.1.0",
    "axios": "^0.19.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "dotenv-flow": "^3.1.0",
    "express": "^4.17.1",
    "express-validation": "^3.0.2",
    "googleapis": "^51.0.0",
    "ioredis": "^4.16.3",
    "nocache": "^2.1.0",
    "pino": "^6.2.1",
    "serve-favicon": "^2.5.0",
    "spotify-web-api-node": "^4.0.0",
    "uuid": "^8.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/dotenv-flow": "^3.0.0",
    "@types/express": "^4.17.6",
    "@types/hapi__joi": "^17.1.0",
    "@types/ioredis": "^4.16.1",
    "@types/pino": "^6.0.0",
    "@types/serve-favicon": "^2.5.0",
    "@types/spotify-web-api-node": "^4.0.1",
    "@types/uuid": "^7.0.3",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.33.0",
    "concurrently": "^5.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-prettier": "^3.1.3",
    "nodemon": "^2.0.3",
    "pino-pretty": "^4.0.0",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "typescript": "^3.8.3"
  }
}
